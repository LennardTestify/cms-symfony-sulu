<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:xi="http://www.w3.org/2001/XInclude"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>unity</key>

    <view>pages/unity</view>
    <controller>App\Controller\PageController:index</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Unity</title>
        <title lang="de">Unity</title>
    </meta>

    <properties>

        <xi:include href="../includes/highlight.xml"/>

        <section name="slider">
            <meta>
                <title lang="en">Slider</title>
            </meta>
            <properties>
                <block name="slider" default-type="slider">
                    <types>
                        <type name="slider">
                            <properties>
                                <property name="sliderImage" type="media_selection" maxOccurs="1" mandatory="true">
                                    <meta>
                                        <title lang="en">Slider image</title>
                                    </meta>
                                    <params>
                                        <param name="types" value="image"/>
                                    </params>
                                </property>
                                <property name="layer1" type="text_line">
                                    <meta>
                                        <title lang="en">Layer 1</title>
                                    </meta>
                                </property>
                                <property name="layer2" type="text_line">
                                    <meta>
                                        <title lang="en">Layer 2</title>
                                    </meta>
                                </property>
                                <property name="layer3" type="text_line">
                                    <meta>
                                        <title lang="en">Layer 3</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>
    </properties>
</template>
