<div id="switch">
    <div class="content-switcher">
        <h3 class="ncagreen">Kontakt</h3>
        <div>
            <div class="row no-gutter-6 demo-thumbz-2 no-margin-right">
                <form method="post" class="ContactForm-03" id="nca-form" aria-live='assertive'>
                    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
                        <div class="form-group">
                            <label for="email">E-Mail:*</label>
                            <input id="email" name="email" class="form-control" type="email" placeholder="hallo@www.de" required>
                        </div>
                        <div class="form-group">
                            <label for="newsletter">Newsletter Abo:</label>
                            <input id="newsletter" name="newsletter" class="form-control email" type="checkbox" checked>
                        </div>
                        <div class="form-group">
                            <label for="name">Name:*</label>
                            <input id="name" name="name" type="text" class="form-control" placeholder="Max Muster">
                        </div>
                        <div class="form-group">
                            <label for="phone">Telefonnummer:</label>
                            <input id="phone" name="phone" type="text" class="form-control" placeholder="017624747727">
                        </div>
                        <div class="form-group">
                            <label for="message">Deine Nachricht:</label>
                            <textarea id="message" name="message" rows="3" class="form-control" style="height:100px" placeholder="Ruf mich mal an"></textarea>
                        </div>
                        <div class="button">
                            <button type="submit" class="btn btn-success submitf-03" value='SUBMIT' name='submitf-03' id="sent">
                                senden
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div id="hide"><i class="fa fa-times"></i></div>
</div>
