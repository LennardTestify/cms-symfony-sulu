<div class="news-list">
    <div class="course-des-title underline">{{ content.headline }}</div>
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">
            <ul class="list-unstyled list-detail">
                {% for item in content.items %}
                    {% if loop.index is not divisible by(2) %}
                        <li><i class="fa fa-angle-right"></i>{{ item.description|raw }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">
