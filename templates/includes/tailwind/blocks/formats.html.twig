<!-- formats.html.twig -->
<section aria-labelledby="Employer Branding Formate"
         class="scroll-mt-14 py-4 sm:scroll-mt-32">
    <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:max-w-4xl lg:px-12">
        <p class="mt-8 font-display text-4xl font-bold tracking-tight text-slate-900">
            {{ content.headline }}
        </p>
        <div class="mt-4 text-lg tracking-tight text-slate-700">
            {{ content.description|raw }}
        </div>
    </div>
    <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:max-w-7xl lg:px-8 mt-16">
        <ol role="list"
            class="grid grid-cols-3 gap-y-10 gap-x-8">
            {% if content.items is not empty %}
                {% for item in content.items %}
                    <li class="">
                        <div class="relative flex h-44 items-center justify-center rounded-2xl px-6 shadow-lg border border-dark">
                            <div class="flex justify-center overflow-hidden rounded shadow-sm">
                                {% set source = item.image[0].formats['format'] %}
                                <img alt="{{ item.image[0].title }}"
                                     src="{{ source }}"
                                     loading="lazy"
                                     class="w-5/6 h-auto mx-auto"/>
                            </div>
                        </div>
                        <h3 class="mt-8 text-base font-medium tracking-tight text-slate-900 before:mb-2 before:block before:font-mono before:text-sm before:text-slate-500 before:content-[counter(video,decimal-leading-zero)]">
                            {{ item.headline }}
                        </h3>
                        <div class="mt-2 text-sm text-slate-600">
                            {{ item.description|raw }}
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ol>
    </div>
</section>
<!-- end formats.html.twig -->
