<!-- formats.html.twig -->
<section aria-labelledby="Employer Branding Formate"
         class="scroll-mt-14 py-4 sm:scroll-mt-32">
    <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:max-w-4xl lg:px-12">
        <p class="mt-8 font-display text-4xl font-bold tracking-tight text-slate-900">
            {{ content.headline }}
        </p>
        <div class="mt-4 text-lg tracking-tight text-slate-700">
            {{ content.description|raw }}
        </div>
    </div>
    <div class="mx-auto px-4 sm:px-6 md:max-w-2xl md:px-4 lg:max-w-7xl lg:px-8 mt-16">
        <ol role="list"
            class="grid grid-cols-1 md:grid-cols-3 auto-cols-max gap-y-10 gap-x-8">
            {% if content.items is not empty %}
                {% for item in content.items %}
                    <li>
                        <div class="relative flex h-auto items-center justify-center rounded-2xl px-6 shadow-lg border border-dark">
                            <div class="flex justify-center overflow-hidden rounded shadow-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-2/3 mx-auto">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
                                </svg>
                            </div>
                        </div>
                        <h3 class="mt-8 text-base font-medium tracking-tight text-slate-900 before:mb-2 before:block before:font-mono before:text-sm before:text-slate-500 before:content-[counter(video,decimal-leading-zero)]">
                            {{ item.headline }}
                        </h3>
                        <div class="mt-2 text-sm text-slate-600">
                            {{ item.description|raw }}
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ol>
    </div>
</section>
<!-- end formats.html.twig -->
